        "destination": "Mobile/iOS/Needle"
      },
      {
        "name": "idb",
        "url": "https://github.com/dmayer/idb",
        "description": "iOS App Security Assessment tool",
        "category": "iOS Testing",
        "destination": "Mobile/iOS/idb"
      },
      {
        "name": "class-dump",
        "url": "https://github.com/nygard/class-dump",
        "description": "Generate Objective-C headers from Mach-O files",
        "category": "iOS Analysis",
        "destination": "Mobile/iOS/class-dump"
      }
    ]
